<%= simple_form_for arguments[:event], remote: true  do |f| %>
  <%= f.input :name, label: false, placeholder: "Name (ex: \"Blue Night Party\" or \"Snawt at L'Antidote\")" %>
  <%= f.input :description, label: false, placeholder: "Description" %>
  <%= f.input :scheduled_at, as: :string, input_html: { class: "datetimepicker4" }, label: false, placeholder: "Choose date and time" %>
  <%= f.input :place_id, collection: arguments[:places], prompt: "Choose your place", label: false %>
  <%= f.input :photo, label: "Add a photo", as: :attachinary, input_html: { class: "hidden" }, label_html: { class: "btn btn-danger" } %>
  <%= f.submit "Create my event", class: "btn btn-primary"%>
<% end %>
