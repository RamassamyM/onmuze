<div class="wrapper-content">
  <% if @event.photo %>
    <div class="banner-show" style="background-image: linear-gradient(90deg, rgba(0,0,0,1), rgba(0,0,0,0.2), rgba(0,0,0,1)), url('<%= cl_image_path @event.photo.path, height: 300, width: 400, crop: :fill %>');">
      <%= render 'shared/update_pic_event' %>
    </div>

  <% else %>
    <div class="banner-show" style="background-image: linear-gradient(90deg, rgba(0,0,0,1), rgba(0,0,0,0.2), rgba(0,0,0,1)), url('http://res.cloudinary.com/onmuze/image/upload/v1496228652/event_fsfk2x.jpg');">
      <%= render 'shared/update_pic_event' %>
    </div>
  <% end %>
  <div class="wrapper">
    <%= render 'events/header_event' %>
  </div>
  <div>
    <%= render 'events/search_artist_bar' %>
  </div>
  <div class="wrapper">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <h3>Featuring</h3>
          <hr>
        </div>
      </div>
      <div class="row" id="event_proposals">
        <%= render 'events/proposals_on_event' %>
      </div>
    </div>
  </div>
  <% if @event.place.user = current_user %>
    <div class="wrapper promote-wrapper">
        <div class="container">
          <div class="row">
            <div class="col-xs-12">
              <div class="flexed-center">
                <div class="right-marged div-text"><span>Pay 10â‚¬ to <strong>promote</strong> your event 10 times on Facebook and to be referenced  in 10 events  websites.</span></div>
                <a href="" class="btn btn-danger">Promote now</a>
              </div>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>