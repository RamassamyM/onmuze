<div class="wrapper-content">
  <% if @event.photo %>
    <div class="banner-show" style="background-image: linear-gradient(90deg, rgba(0,0,0,1), rgba(0,0,0,0.2), rgba(0,0,0,1)), url('<%= cl_image_path @event.photo.path %>');">
      <!-- include render update_pic_event -->
    </div>

  <% else %>
    <div class="banner-show" style="background-image: linear-gradient(90deg, rgba(0,0,0,1), rgba(0,0,0,0.2), rgba(0,0,0,1)), url('event.jpg');">
      <!-- include render update_pic_event -->
    </div>

  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-8">
        <h1><%= @event.name %></h1>
        <h3><%= @event.place.name%> <small><%= @event.scheduled_at.strftime("%A %d, %B %Y") %></small></h3>
        <p><%= @event.description %></p>
        <div id="confirmed_proposals">
          <%= render 'proposals/confirmed_proposals' %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-4">
        <% if @event.place.user == current_user %>
          <%= render 'events/event_owner_sidebar' %>
        <% else %>
          <div id="map" style="width: 100%; height: 600px;">
          </div>
        <% end %>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-12 text-center">
        <a href="#" class="btn btn-primary">Promote this event</a>
      </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
