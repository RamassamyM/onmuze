<div class="text-center">
  <div class="row" id="search">
      <%= simple_form_for :performance, url: performances_path, method: :get do |f| %>
        <div class="col-md-3">
          <%= f.input :address, placeholder: "City", input_html: { class: "input-md" }, label_html: { class: "hidden" } %>
        </div>
        <div class="col-md-3">
          <%= f.input :event_type, collection: @genres, default: 1, input_html: { class: "input-md" }, label_html: { class: "hidden" } %>
        </div>
        <div class="col-md-3">
          <%= f.input :date, as: :string, input_html: { class: "input-md datepicker placeholder-padding" }, label_html: { class: "hidden" }, placeholder: "Pick a date" %>
        </div>
        <div class="col-md-3">
          <%= f.button :submit, "Find an artist", class: "btn btn-danger btn-md", id: "btn-home" %>
        </div>
      <% end %>
  </div>
</div>
