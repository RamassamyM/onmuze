<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 50%), url('http://res.cloudinary.com/onmuze/image/upload/c_scale,w_1920/v1495547650/background_yrtacl.jpg');">
  <div class="navigation">
    <%= render 'shared/navbar_home' %>
  </div>

  <div class="banner-content text-center">
    <div class="logo">
      onmuze<%= image_tag "logo.svg" %>
    </div>
    <h1>Create your event</h1>
    <p>We will promote it</p>
    <%= render 'form' %>
  </div>

  <% if complete_profile? %>
    <%= render "modal" %>
  <% end %>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $('#myModal').modal('show');
    });
  <% end %>
<% end %>
