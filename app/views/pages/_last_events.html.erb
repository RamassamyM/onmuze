<div class="container">
  <h5>Last events</h5>
  <div class="row">
    <% @last_events.each do |event| %>
      <div class="col-md-4">
        <%= link_to event_path(event) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= event_show_card(event) %>');">
          <div class="card-name">
            <h3><%= event.name %></h3>
          </div>
          <div class="card-description">
            <p><%= event.scheduled_at.strftime("%d/%m/%Y") if event.scheduled_at %></p>
            <p><%= event.scheduled_at.strftime("%H:%M") if event.scheduled_at %></p>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
