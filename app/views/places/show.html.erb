<div class="wrapper">
  <% if @place.photo %>
    <div class="banner-show" style="background-image: linear-gradient(90deg, rgba(0,0,0,1), rgba(0,0,0,0.2), rgba(0,0,0,1)), url('<%= cl_image_path @place.photo.path %>');">
      <%= render 'places/update_pic_place' %>
    </div>

  <% else %>
    <div class="banner-show" style="background-image: linear-gradient(90deg, rgba(0,0,0,1), rgba(0,0,0,0.2), rgba(0,0,0,1)), url('places.jpg');">
      <%= render 'shared/update_pic_place' %>
    </div>
  <% end %>

  <div class="wrapper">
    <%= render 'header' %>
  </div>

  <div class="wrapper">
    <%= render 'create_new_event' %>
  </div>

  <div class="wrapper">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <h2>Future events</h2>
        </div>
      </div>
    </div>
    <%= render 'event_card_show' %>
  </div>

  <div class="wrapper-grey">
    <%= render 'location_banner' %>
  </div>

  <div class="wapper">
    <%= render 'location_map', latitude: @place.latitude, longitude: @place.longitude %>
  </div>

</div>

<% content_for :title, @place.name %>
