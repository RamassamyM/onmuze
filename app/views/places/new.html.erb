<div class="wrapper">
  <div class="banner-gradient" style="background-image: linear-gradient(0deg, rgba(255,255,255,0.6), rgba(255,255,255,1)50%), url('<%= image_url('stage.jpg')%>');">
    <div class="container text-center">
      <div class="row">
        <div class="margined">
          <h2>Create a new place</h2>
          <p>to organize your best event !</p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
          <%= simple_form_for @place do |f| %>
            <%= f.input :name, label: false, placeholder: "Name"%>
            <%= f.input :address, label: false, placeholder: "Address" %>
            <%= f.input :description, label: false, placeholder: "Description" %>
            <%= f.submit "Create my place", class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :title, "Add a place" %>
