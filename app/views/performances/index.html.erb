<% content_for :title, "Find an artist" %>
<div class="wrapper-form text-center inline-search-bar bg-grey">
  <%= render 'pages/home_form' %>
</div>

<div class="wrapper">
  <% if @performances.empty? %>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <p>No results found for your query, try another research</p>
      </div>
    </div>
  </div>
  <% else %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h3>Artists</h3>
        <hr>
          <%= render 'performances/index' %>
    <% end %>
      </div>
    </div>
  </div>
</div>

