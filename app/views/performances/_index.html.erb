<div class="row">
  <% @performances.each do |performance| %>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
        <% if performance.banner.nil? %>
          <div class="performance-card" style="background-image: linear-gradient(90deg, rgba(0,0,0,0.4), rgba(0,0,0,0.2), rgba(0,0,0,0.4)), url('artist.png');">
            <div class="media-btn">
              <i class="fa fa-play-circle-o" aria-hidden="true"></i>
            </div>

            <%= link_to performance_path(performance) do %>
              <div>
                <h3 class="performance-name"><%= performance.name %></h3>
                <h5 class="performance-genre"><%= performance.genre.name %></h5>
              </div>
            <% end %>
          </div>

        <% else %>
          <div class="performance-card" style="background-image: linear-gradient(90deg, rgba(0,0,0,0.4), rgba(0,0,0,0.2), rgba(0,0,0,0.4)), url('<%= cl_image_path performance.banner.path, height: 250 %>');">
            <div class="media-btn">
              <i class="fa fa-play-circle-o" aria-hidden="true"></i>
            </div>

            <%= link_to performance_path(performance) do %>
              <div class="layer-card">
                <h3 class="performance-name"><%= performance.name %></h3>
                <h5 class="performance-genre"><%= performance.genre.name %></h5>
              </div>
            <% end %>
          </div>
      <% end %>
    </div>
  <% end %>
</div>
