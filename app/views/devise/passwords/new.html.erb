<div class="wrapper-content">
 <%= render "shared/link-to-back" %>
    <div class="container text-center">
      <%= image_tag "onmuze_logo_black_symbol", class: "logo-devise-pages"%>
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
          <div class="devise-title">
            <h2>Forgot your password?</h2>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-form-devise" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>

<% content_for :title, "My account" %>
